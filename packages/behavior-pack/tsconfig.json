{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["@minecraft/server", "@minecraft/server-net"],
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "scripts", "dist", "**/*.test.ts"]
}
