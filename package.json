{
    "name": "minecarta",
    "private": true,
    "version": "0.0.0-semantically-versioned",
    "description": "MineCarta - Real-time map visualization for Minecraft worlds",
    "license": "MIT",
    "scripts": {
        "build": "pnpm -r build",
        "build:pack": "pnpm --filter @minecarta/behavior-pack build",
        "build:pack:watch": "pnpm --filter @minecarta/behavior-pack build:watch",
        "pack:deploy": "pnpm --filter @minecarta/behavior-pack pack:deploy",
        "pack:build-deploy": "pnpm --filter @minecarta/behavior-pack pack:build-deploy",
        "dev": "pnpm --filter @minecarta/server dev",
        "dev:server": "pnpm --filter @minecarta/server dev",
        "test": "pnpm -r test",
        "test:pack": "pnpm --filter @minecraft-map/behavior-pack test",
        "lint": "pnpm -r lint",
        "clean": "pnpm -r clean",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
    },
    "devDependencies": {
        "prettier": "^3.5.3",
        "semantic-release": "^24.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "packageManager": "pnpm@9.0.0"
}
